{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch index.ts",
    "dev:full": "./start-with-opa.sh",
    "start": "bun index.ts",
    "build": "bun build index.ts --outdir ./dist",
    "create-admin": "bun scripts/createAdmin.ts",
    "init-policies": "bun scripts/initializePolicies.ts",
    "load-rba-policies": "bun scripts/loadRBAPolicies.ts",
    "start-opa": "./scripts/start-opa.sh",
    "stop-opa": "docker stop sentinelvault-opa 2>/dev/null || pkill -f 'opa run --server' || true",
    "opa-health": "curl -f http://localhost:8181/health && echo ' - OPA is healthy' || echo ' - OPA is not running'"
  },
  "dependencies": {
    "@types/uuid": "^11.0.0",
    "aws-sdk": "^2.1500.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.21.0",
    "mongoose": "^8.20.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
